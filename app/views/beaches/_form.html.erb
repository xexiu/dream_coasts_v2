<br />
<%= f.label :short_description %><br />
<%= f.text_area(:short_description, rows: 4, cols: 140) %>
<br />
<%= f.label :long_description %><br />
<%= f.text_area(:long_description, rows: 4, cols: 140) %>
<br />
<%= f.label :whatsee %><br />
<%= f.text_area(:whatsee, rows: 4, cols: 140) %>
<br />
<%= f.label :whatdo %><br />
<%= f.text_area(:whatdo, rows: 4, cols: 140) %>
<br />
<%= f.label :activities %><br />
<%= f.text_area(:activities, rows: 4, cols: 140) %>
<br />
<%= f.label :restaurants %><br />
